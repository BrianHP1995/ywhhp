@import '../common/index.wxss';

.van-stepper {
  font-size: 0
}

.van-stepper__minus,
.van-stepper__plus {
  position: relative;
  display: inline-block;
  width: 28px;
  height: 28px;
  padding: 5px;
  margin: 1px;
  vertical-align: middle;
  border: 0;
  box-sizing: border-box
}
.van-stepper__minus{
    border: 1rpx solid #c2c2c2;
    background-color: #fff;
}
.van-stepper__plus{
    border: 1rpx solid #ff9f00;
    background-color: #ff9f00;
}
.van-stepper__minus:before,
.van-stepper__plus:before {
  width: 9px;
  height: 1px
}

.van-stepper__minus:after,
.van-stepper__plus:after {
  width: 1px;
  height: 9px
}

.van-stepper__minus:after,
.van-stepper__minus:before,
.van-stepper__plus:after,
.van-stepper__plus:before {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  margin: auto;
  content: ""
}
.van-stepper__minus:after,
.van-stepper__minus:before{
    background-color: #c2c2c2;
}
.van-stepper__plus:after,
.van-stepper__plus:before{
    background-color: #fff;
}


/* .van-stepper__minus--hover,
.van-stepper__plus--hover {
  background-color: #fff
} */

.van-stepper__minus--disabled,
.van-stepper__plus--disabled {
  background-color: #fff
}

.van-stepper__minus--disabled:after,
.van-stepper__minus--disabled:before,
.van-stepper__plus--disabled:after,
.van-stepper__plus--disabled:before {
  background-color: #c9c9c9
}

/* .van-stepper__minus--disabled.van-stepper__minus--hover,
.van-stepper__minus--disabled.van-stepper__plus--hover,
.van-stepper__plus--disabled.van-stepper__minus--hover,
.van-stepper__plus--disabled.van-stepper__plus--hover {
  background-color: #f7f8fa
} */

.van-stepper__minus {
  border-radius: 50%;
}

.van-stepper__minus:after {
  display: none
}

.van-stepper__plus {
    border-radius: 50%;
}

.van-stepper__input {
  display: inline-block;
  width: 30px;
  height: 26px;
  padding: 1px;
  margin: 1px;
  font-size: 14px;
  color: #333;
  text-align: center;
  vertical-align: middle;
  background-color: #f2f3f5;
  border: 0;
  border-width: 1px 0;
  border-radius: 0;
  box-sizing: initial;
  -webkit-appearance: none
}

.van-stepper__input--disabled {
  color: #333;
  background-color: #fff
}
